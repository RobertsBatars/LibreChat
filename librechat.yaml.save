# For more information, see the Configuration Guide:
# https://www.librechat.ai/docs/configuration/librechat_yaml
 
# Configuration version (required)
version: 1.2.8
# This setting caches the config file for faster loading across app lifecycle
cache: true

interface:
  mcpServers:
    placeholder: "MCP Servers"
  termsOfService:
    externalUrl: "https://vuchat.tech/terms"
    openNewTab: true
    modalAcceptance: true
    modalTitle: "Terms of Service"
    modalContent: |
      # Terms of Service
      ## Introduction
      Welcome to VUChat!
  customWelcome: "Hey {{user.name}}! Welcome to VUChat"

fileConfig:
  serverFileSizeLimit: 50
  avatarSizeLimit: 5

endpoints:
    custom:

    - name: "OpenRouter"
      # For `apiKey` and `baseURL`, you can use environment variables that you define.
      # recommended environment variables:
      apiKey: "${OPENROUTER_KEY}" # NOT OPENROUTER_API_KEY
      baseURL: "https://openrouter.ai/api/v1"
      models:
        default: ["openai/"]
        fetch: true
      titleConvo: true
      titleModel: "openai/gpt-5-mini-2025-08-07"
      # Recommended: Drop the stop parameter from the request as Openrouter models use a variety of stop tokens.
      dropParams: ["stop"]
      modelDisplayLabel: "OpenRouter"

